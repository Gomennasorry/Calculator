@section Styles {

	<style type="text/css">

		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
			font-family: sans-serif;
		}

		body {
			width: 100%;
			/*display: flex;*/
			/*justify-content: center;*/
			/*align-items: center;*/
			background-color: #818181;
		}

		.calculator {
			border: 1px solid #717377;
			padding: 8px 12px 12px 12px;
			background-color: #d5d1c5;
			border: 2px solid #908b85;
			border-radius: 20px;
			box-shadow: 7px 10px 34px 1px rgba(0, 0, 0, 0.68), inset -1px -6px 12px 0.1px #89847e;
			width: 417px;
			height: 615px;
			/* background-image: url("assets/img/calculator-bg.jpg"); */
		}

		.top-cal {
			display: flex;
			align-items: center;
			justify-content: space-between;
			padding: 11px;
		}

		.text h1 {
			font-size: 21px;
			line-height: 1.3;
			color: #989898;
			letter-spacing: 2.5px;
		}

		.solar {
			padding: 0;
			background-color: #522721;
			width: 120px;
			height: 44px;
			border-radius: 4px;
			display: flex;
			box-shadow: inset 0 0 10px #000;
		}

		.vl {
			border-left: 3px solid #612f28;
			height: 40px;
			margin-left: 28.7px;
			margin-top: 2px;
			border-radius: 9px;
		}

		input {
			width: 370px;
			border: none;
			padding: 5px;
			margin: 3px 10px 30px 10px;
			background: #688156;
			box-shadow: inset 4px 5px 10px #000;
			font-size: 77px;
			text-align: right;
			cursor: pointer;
			color: #000;
			border-radius: 10px;
			font-family: "Roboto";
		}

			input::placeholder {
				color: #000;
			}

		button {
			border-radius: 8px;
			border: 1px solid #595757;
			background-color: white !important;
			margin: 0 4px 10px 8px;
			height: 57px;
			width: 82px;
			box-shadow: 0px 3px 0px 0px #222121, inset -1px -3px 10px 1px #515151;
			font-size: 25px;
			font-weight: 700;
			cursor: pointer;
			/* background-image: url("assets/img/button-bg.jpg"); */
			background-size: cover;
		}

			button:active {
				transform: translate(0px, 3px);
				box-shadow: none;
			}

		.equalBtn {
			background-color: #cdcdcd !important;
			border-radius: 50% !important;
			/* background-image: url("assets/img/button-x+.avif"); */
		}

		.gray-bg {
			background-color: #cdcdcd !important;
			border-radius: 50% !important;
			/* background-image: url("assets/img/button-x+.avif"); */
		}

		.red-bg {
			background-color: #b55772 !important;
			/* background-image: url("assets/img/button-bg-red.jpg"); */
		}

		.operator {
			color: #6dee0a;
		}

		.cal09-container {
			display: flex;
			justify-content: center;
			align-items: center;
		}

	</style>
}

<div class="cal09-container">
	<div class="calculator">
		<div class="top-cal">
			<div class="text">
				<h1>CALCULATOR</h1>
				<h1>GOMENNASORRY</h1>
			</div>
			<div class="solar">
				<div class="vl"></div>
				<div class="vl"></div>
				<div class="vl"></div>
			</div>
		</div>
		<input type="text" id="inputBox" placeholder="0" />
		<div>
			<button class="button red-bg">AC</button>
			<button class="button red-bg">DEL</button>
			<button class="button gray-bg">%</button>
			<button class="button gray-bg">/</button>
		</div>
		<div>
			<button class="button">7</button>
			<button class="button">8</button>
			<button class="button">9</button>
			<button class="button gray-bg">*</button>
		</div>
		<div>
			<button class="button">4</button>
			<button class="button">5</button>
			<button class="button">6</button>
			<button class="button gray-bg">-</button>
		</div>
		<div>
			<button class="button">1</button>
			<button class="button">2</button>
			<button class="button">3</button>
			<button class="button gray-bg">+</button>
		</div>
		<div>
			<button class="button">00</button>
			<button class="button">0</button>
			<button class="button">.</button>
			<button class="button equalBtn">=</button>
		</div>
	</div>
</div>

@section Scripts {

	<script type="text/javascript">

		let input = document.getElementById("inputBox");
		let buttons = document.querySelectorAll("button");

		let result = "";
		let arr = Array.from(buttons);
		arr.forEach((button) => {
			button.addEventListener("click", (e) => {
				if (e.target.innerHTML == "=") {
					if (result != "") {
						result = eval(result);
						input.value = result;
					}
				} else if (e.target.innerHTML == "AC") {
					result = "";
					input.value = result;
				} else if (e.target.innerHTML == "DEL") {
					result = result.substring(0, result.length-1);
					input.value = result;
				} else {
					result += e.target.innerHTML;
					input.value = result;
				}
			});
		});

	</script>
}